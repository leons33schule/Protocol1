        <Button Content="Rollen anpassen" HorizontalAlignment="Right" Margin="0,286,394,0" VerticalAlignment="Top" Width="235" Height="34" Foreground="White" BorderBrush="#3fa8cf" FontSize="18" FontWeight="Medium" Background="#3fa8cf" />
        <Button Content="Benutzer anpassen" HorizontalAlignment="Right" Margin="0,286,96,0" VerticalAlignment="Top" Width="235" Height="34" Foreground="White" BorderBrush="#3fa8cf" FontSize="18" FontWeight="Medium" Background="#3fa8cf" />
