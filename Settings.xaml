        <PasswordBox HorizontalAlignment="Left" Margin="245,125,0,0" VerticalAlignment="Top" Width="140" Height="24"/>
        <PasswordBox HorizontalAlignment="Left" Margin="245,93,0,0" VerticalAlignment="Top" Width="140" Height="24"/>
        <PasswordBox HorizontalAlignment="Left" Margin="245,159,0,0" VerticalAlignment="Top" Width="140" Height="24"/>


        <Label Content="Admin Bereich:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Width="235" FontSize="14" FontFamily="Arial Black" Foreground="#FF3FA8CF" Margin="10,246,0,0"/>

        <Button Content="Speichern" HorizontalAlignment="Right" Margin="0,151,422,0" VerticalAlignment="Top" Width="150" Height="34" Foreground="White" BorderBrush="#3fa8cf" FontSize="18" FontWeight="Medium" Background="#3fa8cf" />
